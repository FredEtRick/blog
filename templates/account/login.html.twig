{% extends 'base.html.twig' %}

{% block title %}connexion{% endblock %}

{% block body %}

<div class="container">
    <div class="row">
        <div class="col-md-3">
            &nbsp;
        </div>
        <div class="col-md-6">
            <div class="bg-light p-3">
                <h1>
                    Connexion
                </h1>

                {% if hasError %}
                    <div class="alert alert-danger">
                        Une erreur est survenue, le nom d'utilisateur ou le mot de passe est invalide.
                    </div>
                {% endif %}

                <form action="{{ path('account_login') }}" method="post">
                    <div class="form-group">
                        <label for="login">
                            login
                        </label>
                        <input type="text" name="_username" id="login" class="form-control" placeholder="Veuillez entrer votre login..." required value="{{username}}">
                    </div>
                    <div class="form-group">
                        <label for="password">
                            Mot de passe :
                        </label>
                        <input type="password" name="_password" id="password" class="form-control" placeholder="Veuillez entrer votre mot de passe..." required>
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-success">
                            Connexion
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

{% endblock %}
